package practise;

import java.util.Scanner;

public class saptahone 
{

	public static void main(String[] args) 
	{
		
		Scanner sc=new Scanner(System.in);
		  int t=sc.nextInt();
		  int[] c=new int[t];
		  for(int i=0;i<t;i++)
		  {
			 int a=sc.nextInt();
			 int b=sc.nextInt();
			 c[i]=a+b;
		  }
		  for(int i=0;i<t;i++)
		  {
			  System.out.println(c[i]);
		  }
	}

}
